    <script>
      // small helpers
      function $(s) { return document.querySelector(s); }
      function $all(s) { return document.querySelectorAll(s); }

      // Mobile menu toggle
      const mobileToggle = $('#mobile-toggle');
      const mobileMenu = $('#mobile-menu');
      let mobileOpen = false;
      mobileToggle && mobileToggle.addEventListener('click', () => {
        mobileOpen = !mobileOpen;
        mobileMenu.style.display = mobileOpen ? 'block' : 'none';
        mobileToggle.innerHTML = mobileOpen ? '<i class="bi bi-x" style="font-size:22px"></i>' : '<i class="bi bi-list" style="font-size:22px"></i>';
      });

      // Smooth scroll to section
      function scrollToSection(id) {
        const el = document.getElementById(id);
        if (!el) return;
        const y = el.getBoundingClientRect().top + window.scrollY - 80;
        window.scrollTo({ top: y, behavior: 'smooth' });
        // close mobile menu
        if (mobileOpen) {
          mobileOpen = false;
          mobileMenu.style.display = 'none';
          mobileToggle.innerHTML = '<i class="bi bi-list" style="font-size:22px"></i>';
        }
      }
      window.scrollToSection = scrollToSection;

      // Contact form handling (simple)
      const contactForm = document.getElementById('contactForm');
      const formAlert = document.getElementById('formAlert');
      contactForm && contactForm.addEventListener('submit', function(e){
        e.preventDefault();
        const name = $('#name').value.trim();
        const email = $('#email').value.trim();
        const subject = $('#subject').value.trim();
        const message = $('#message').value.trim();

        if (!name || !email || !subject || !message) {
          showAlert('Please fill all fields', 'danger');
          return;
        }

        // simulate sending (you can replace with real API call)
        showAlert('Message sent ‚Äî thanks! I will reply to you soon.', 'success');
        contactForm.reset();
      });

      function showAlert(msg, type){
        formAlert.style.display = 'block';
        formAlert.innerHTML = '<div class="alert alert-' + (type === 'success' ? 'success' : 'danger') + '" role="alert">' + msg + '</div>';
        setTimeout(()=> formAlert.style.display = 'none', 4500);
      }

      // set year
      document.getElementById('year').textContent = new Date().getFullYear();

      // small fade-up on load for elements with .fade-up
      document.addEventListener('DOMContentLoaded', ()=> {
        $all('.fade-up').forEach((el,idx)=> {
          el.style.animationDelay = (idx*80) + 'ms';
          el.style.opacity = 0;
          setTimeout(()=> el.style.opacity = 1, 60 + idx*30);
        });
      });
    </script>
  </body>
</html>
